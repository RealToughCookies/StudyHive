{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "QuizPayload",
  "description": "Stable contract for quiz generation responses",
  "required": ["topic", "difficulty", "questions"],
  "properties": {
    "topic": {
      "type": "string",
      "description": "Main topic or subject of the quiz"
    },
    "difficulty": {
      "type": "string",
      "enum": ["easy", "medium", "hard"],
      "description": "Difficulty level of the quiz"
    },
    "questions": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "description": "Array of quiz questions",
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/MultipleChoiceQuestion"
          },
          {
            "$ref": "#/definitions/ShortAnswerQuestion"
          },
          {
            "$ref": "#/definitions/FillInBlankQuestion"
          }
        ]
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "enum": ["device-llm", "rules"],
          "description": "Engine that generated this quiz"
        },
        "generatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "seed": {
          "type": "integer",
          "description": "Random seed used for generation"
        }
      }
    }
  },
  "definitions": {
    "MultipleChoiceQuestion": {
      "type": "object",
      "required": ["id", "type", "prompt", "options", "correctAnswer", "explanation"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^mcq_[a-zA-Z0-9_-]+$"
        },
        "type": {
          "type": "string",
          "const": "multiple_choice"
        },
        "prompt": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500
        },
        "options": {
          "type": "array",
          "minItems": 2,
          "maxItems": 6,
          "items": {
            "type": "object",
            "required": ["value", "label"],
            "properties": {
              "value": {
                "type": "string",
                "minLength": 1
              },
              "label": {
                "type": "string",
                "minLength": 1,
                "maxLength": 200
              }
            }
          }
        },
        "correctAnswer": {
          "type": "string",
          "description": "Value of the correct option"
        },
        "explanation": {
          "type": "string",
          "minLength": 10,
          "maxLength": 1000
        }
      }
    },
    "ShortAnswerQuestion": {
      "type": "object",
      "required": ["id", "type", "prompt", "sampleAnswer", "rubric"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^saq_[a-zA-Z0-9_-]+$"
        },
        "type": {
          "type": "string",
          "const": "short_answer"
        },
        "prompt": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500
        },
        "sampleAnswer": {
          "type": "string",
          "minLength": 10,
          "maxLength": 1000
        },
        "rubric": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["criterion", "points", "keywords"],
            "properties": {
              "criterion": {
                "type": "string",
                "minLength": 5
              },
              "points": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10
              },
              "keywords": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "FillInBlankQuestion": {
      "type": "object",
      "required": ["id", "type", "prompt", "correctAnswer", "explanation"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^fib_[a-zA-Z0-9_-]+$"
        },
        "type": {
          "type": "string",
          "const": "fill_in_blank"
        },
        "prompt": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500
        },
        "correctAnswer": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "explanation": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500
        }
      }
    }
  }
}
